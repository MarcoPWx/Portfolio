{
  "name": "@naturequest/portfolio",
  "version": "1.0.0",
  "description": "Central hub for NatureQuest ecosystem - Unified auth, account management, and product portfolio",
  "private": true,
  "workspaces": [
    "ecosystem_central/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:mdx": "eslint --no-ignore \"src/**/*.mdx\"",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:ssr": "node scripts/test-ssr.js",
    "test:ssr:watch": "nodemon scripts/test-ssr.js",
    "test:all": "npm run test && npm run test:e2e && npm run test:ssr",
    "dev:test": "concurrently \"npm run dev\" \"sleep 5 && npm run test:ssr\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "analyze-storybook": "STORYBOOK_ANALYZE=true storybook build",
    "analyze": "ANALYZE=true next build",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@supabase/auth-helpers-nextjs": "^0.8.7",
    "@supabase/supabase-js": "^2.39.3",
    "@tanstack/react-query": "^5.17.19",
    "@tremor/react": "^3.13.4",
    "framer-motion": "^11.0.3",
    "lucide-react": "^0.312.0",
    "next": "^15.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.10.4",
    "stripe": "^14.14.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@emotion/is-prop-valid": "^1.3.1",
    "@next/bundle-analyzer": "^15.5.2",
    "@playwright/test": "^1.55.0",
    "@storybook/addon-actions": "^9.0.8",
    "@storybook/addon-backgrounds": "^9.0.8",
    "@storybook/addon-controls": "^9.0.8",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/addon-links": "^9.1.3",
    "@storybook/addon-measure": "^9.0.8",
    "@storybook/addon-outline": "^9.0.8",
    "@storybook/addon-viewport": "^9.0.8",
    "@storybook/addon-webpack5-compiler-swc": "^3.0.0",
    "@storybook/nextjs": "^9.1.3",
    "@storybook/react-webpack5": "^9.1.3",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.21",
    "buffer": "^6.0.3",
    "chalk": "^5.6.0",
    "commitizen": "^4.3.1",
    "css-loader": "^7.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-mdx": "^3.6.2",
    "eslint-plugin-mdx": "^3.6.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-storybook": "^9.1.3",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.1",
    "lint-staged": "^16.1.5",
    "node-fetch": "^3.3.2",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.6.2",
    "process": "^0.11.10",
    "storybook": "^9.1.3",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "tty-browserify": "^0.0.1",
    "typescript": "^5.3.3",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ],
    "overrides": [
      {
        "files": [
          "**/*.mdx/**"
        ],
        "extends": [
          "plugin:mdx/code-blocks"
        ]
      }
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,mdx,json,yaml,yml,css,scss,html}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
