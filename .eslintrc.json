{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true }
  },
  "plugins": ["react", "react-hooks", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ],
  "env": {
    "es2021": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "react": { "version": "detect" }
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "temp_backup/",
    "tests/e2e/**",
    "**/*.stories.*",
    "docs/**",
    "storybook-static/**",
    "**/*.bundle.js",
    "**/*.iframe.bundle.js",
    "**/*.min.js",
    "public/**"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**/*.{js,jsx,ts,tsx}", "tests/**/*.{js,jsx,ts,tsx}", "jest.setup.js"],
      "env": { "jest": true, "node": true, "browser": true },
      "rules": {
        "no-undef": "off"
      }
    },
    {
      "files": [
        "src/components/*Portfolio*.tsx",
        "src/components/ComprehensivePortfolio.tsx",
        "src/components/DeveloperPortfolio.tsx",
        "src/components/DefinitivePortfolio.tsx",
        "src/components/EnhancedPortfolio.tsx",
        "src/components/PersonalPortfolio.tsx",
        "src/components/ProfessionalPortfolio.tsx",
        "src/components/UltimatePortfolio.tsx",
        "src/components/TechnicalPortfolio.tsx",
        "src/components/ComprehensiveSkills.tsx",
        "src/components/ComprehensiveSkillsV2.tsx",
        "src/components/StatsDashboard.tsx",
        "src/components/SkillComponentsShowcase.tsx",
        "src/components/RoadmapModal.tsx",
        "src/components/ecosystem/EcosystemWidget.tsx",
        "src/components/ecosystem/types.ts"
      ],
      "rules": {
        "no-unused-vars": "off",
        "react/no-unescaped-entities": "off",
        "react/jsx-no-comment-textnodes": "off",
        "no-useless-escape": "off"
      }
    }
  ]
}

